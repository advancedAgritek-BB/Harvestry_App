{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Harvestry.Telemetry": "Debug"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "TelemetryDb": "Host=localhost;Port=54322;Database=postgres;Username=postgres;Password=your-super-secret-password"
  },
  "Telemetry": {
    "Mqtt": {
      "Enabled": false,
      "Host": "localhost",
      "Port": 1883,
      "TopicFilter": "site/+/equipment/+/telemetry/#"
    },
    "WalReplication": {
      "Enabled": false,
      "SlotName": "telemetry_slot",
      "PublicationName": "telemetry_publication",
      "StatusIntervalSeconds": 10,
      "RetryDelaySeconds": 5,
      "MaxRetryDelaySeconds": 60
    },
    "Subscriptions": {
      "Enabled": false,
      "MonitorIntervalSeconds": 30,
      "StaleConnectionSeconds": 120,
      "TopStreamsToLog": 5
    },
    "Simulation": {
      "Enabled": false,
      "IntervalSeconds": 5
    }
  }
}

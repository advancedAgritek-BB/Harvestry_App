{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "identity",
        "organizations",
        "spatial",
        "inventory",
        "processing",
        "sensors",
        "irrigation",
        "environment",
        "interlocks",
        "closed-loop",
        "lifecycle",
        "tasks",
        "messaging",
        "slack",
        "metrc",
        "biotrack",
        "qbo",
        "labeling",
        "analytics",
        "ai",
        "sustainability",
        "pdm",
        "gateway",
        "frontend",
        "database",
        "infra",
        "ci",
        "docs",
        "deps"
      ]
    ],
    "scope-case": [2, "always", "lower-case"],
    "subject-case": [2, "never", ["upper-case"]],
    "subject-empty": [2, "never"],
    "subject-full-stop": [2, "never", "."],
    "header-max-length": [2, "always", 100],
    "body-leading-blank": [2, "always"],
    "body-max-line-length": [2, "always", 200],
    "footer-leading-blank": [2, "always"]
  }
}
